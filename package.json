{
  "name": "beltah-pairui",
  "version": "1.0.0",
  "description": "Web UI that generates WhatsApp pairing codes (or QR) for BeltahBot.",
  "main": "server.js",

  "scripts": {
    "start": "node server.js",          // Render uses this
    "dev":   "nodemon server.js"        // Optional: local hot-reload
  },

  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.18",
    "body-parser": "^1.20.2",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "pino": "^8.0.0",
    "qrcode-terminal": "^0.12.0"        // shows ASCII QR in terminal fallback
  },

  "devDependencies": {
    "nodemon": "^3.0.2"                 // only for local development
  },

  "keywords": [
    "whatsapp",
    "pair-code",
    "qr",
    "beltah",
    "baileys",
    "render"
  ],

  "author": "Ishaq Ibrahim (Beltah) & Raphton Muguna",
  "license": "MIT",

  "engines": {                          // helps Render pick a good Node version
    "node": ">=18.x"
  }
    }
